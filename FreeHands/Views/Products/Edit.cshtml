@model FreeHands.Models.Product
@using FreeHands.Models
@{
    ViewBag.Title = "تعديل المنتج";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="container text-center">
            <a href="~/Products/Details/@(Model.ID)" class="btn btn-info">
                <i class="fa fa-info"></i>
                تفاصيل
            </a>
        </div>
        <br />
        <form action="~/Products/Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.Hidden("ID",Model.ID)
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
                <label for="" class="col-sm-2 col-form-label"> اسم المنتج </label>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control",required= "required" } })
                </div>
                <label for="" class="col-sm-2 col-form-label"> السعر </label>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.TimeToFinish, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
                <label for="" class="col-sm-2 col-form-label"> وقت التنفيذ </label>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    @Html.DropDownList("Provider_ID", new SelectList(new DB().Providers, "ID", "TradeName",Model.Provider_ID), "-اختر مقدم الخدمة-", htmlAttributes: new { @class = "form-control form-control-sm", required = "required" })
                </div>
                <label for="" class="col-sm-2 col-form-label"> مقدم الخدمة </label>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    @Html.DropDownList("Cat_ID", new SelectList(new DB().Categories, "ID", "Name",Model.Cat_ID), "-اختر النوع-", htmlAttributes: new { @class = "form-control form-control-sm", required = "required" })
                </div>
                <label for="" class="col-sm-2 col-form-label"> نوع الخدمة</label>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <textarea type="text" class="form-control" name="Description" required>@Model.Description</textarea>
                </div>
                <label for="" class="col-sm-2 col-form-label"> الوصف </label>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <input type="file" class="form-control" name="Photo">
                </div>
                <label for="" class="col-sm-2 col-form-label"> صورة المنتج </label>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <input class="btn btn-success" type="submit" value="حفظ">
                </div>
            </div>
        </form>
        @if (ViewBag.error != null)
        {
            <span style="color:red">@ViewBag.error</span>
        }
    </section>
</section>
