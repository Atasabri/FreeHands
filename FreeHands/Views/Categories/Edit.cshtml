@model FreeHands.Models.Category

@{
    ViewBag.Title = "تعديل النوع";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="container text-center">
        </div>
        <br />
        <form method="post" action="~/Categories/Edit">
            @Html.AntiForgeryToken()
            @Html.Hidden("ID",Model.ID)
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@Model.Name" name="Name" required>
                </div>
                <label for="inputPassword" class="col-sm-2 col-form-label">النوع</label>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <button class="btn btn-success" type="submit"> حفظ </button>
                </div>
            </div>
        </form>
        @if (ViewBag.error != null)
        {
                <span style="color:red">@ViewBag.error</span>
        }
    </section>
</section>
